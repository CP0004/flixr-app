<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/style_background_app"
    tools:context=".ui.LogActivity">

    <ImageView
        android:id="@+id/Log_img_state_log"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_180sdp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_error" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/Log_tv_state_log"
        android:layout_width="match_parent"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Log_img_state_log"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_20ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:textColor="@color/color_text_background_card"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/internal_lay_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="start|center_vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Text_cp"
            android:textColor="@color/color_text_background_app"
            android:textSize="@dimen/_30ssp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/Log_img_telegram"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_10ssp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_telegram"
            app:tint="@color/color_image_background_card"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/Log_img_instagram"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_10ssp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_instagram"
            app:tint="@color/color_image_background_card"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/Log_img_tiktok"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_10ssp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_tiktok"
            app:tint="@color/color_image_background_card"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</RelativeLayout>