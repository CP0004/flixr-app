<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/style_background_app"
    tools:context=".ui.SettingActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/internal_lay_actionbar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/dimen_radius_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_background_card"
            android:gravity="start|center_vertical"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_background_card"
                    android:gravity="start|top"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/Text_info"
                    android:textColor="@color/color_text_background_card"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/Setting_lay_Media_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="start|center_vertical">


        <ImageView
            android:id="@+id/Setting_img_TikTok"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_10ssp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_tiktok"
            app:tint="@color/color_image_background_card"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/Setting_img_Instagram"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_10ssp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_instagram"
            app:tint="@color/color_image_background_card"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/Setting_img_Telegram"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_10ssp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_telegram"
            app:tint="@color/color_image_background_card"
            tools:ignore="ContentDescription" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5ssp"
            android:gravity="center"
            android:text="@string/Text_cp"
            android:textColor="@color/color_text_background_app"
            android:textSize="@dimen/_30ssp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>